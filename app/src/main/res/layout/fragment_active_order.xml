<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.riggle.ui.home.fragment.CartFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        style="@style/DefaultAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center">

        <TextView
            android:id="@+id/tvToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/font_bold"
            android:gravity="center_vertical"
            android:text="@string/active_orders"
            android:textColor="@color/black_85"
            android:textSize="24sp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvActiveOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp" />

    <LinearLayout
        android:id="@+id/emptyOrdersLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:layout_below="@+id/appBar"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/img_no_orders" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/font_medium"
            android:text="@string/looks_like_you_have_no_orders_yet"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:text="Let's go to home and complete an order"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/letsGoButton"
            android:layout_marginTop="32dp"
            android:background="@drawable/bt_corner_24dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:minWidth="150dp"
            android:padding="8dp"
            android:text="Take me home"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

</RelativeLayout>
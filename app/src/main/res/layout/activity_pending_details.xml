<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.riggle.data.models.response.OrderDetailsResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/header"
            layout="@layout/layout_appbar" />

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="16dp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_icon"
            app:layout_constraintBottom_toBottomOf="@+id/header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/header"
            app:tint="#333333" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/font_medium"
                    android:text="delivering_to"
                    android:textColor="@color/black_85"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvStoreAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_medium"
                    android:text="delivering_to"
                    android:textColor="@color/black_85"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvStoreMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_medium"
                    android:text="delivering_to"
                    android:textColor="@color/black_85"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/orderIdTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/font_regular"
                            android:lineSpacingExtra="4sp"
                            android:text='@{"Order ID: "+bean.code}'
                            android:textColor="@color/black_85"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDate"
                            set_date_name="@{bean.delivery_date}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="@font/font_regular"
                            android:lineSpacingExtra="4sp"
                            android:textColor="@color/black_85"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Date : DD/MM/YYYY" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/black_18" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/layout_bg"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tvPriceDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_bold"
                                android:text="@string/bill_details"
                                android:textColor="@color/black_85"
                                android:textSize="16sp" />

                            <View
                                android:id="@+id/viewPriceDetails"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/tvPriceDetails"
                                android:layout_marginTop="8dp"
                                android:background="@color/black_18" />

                            <TextView
                                android:id="@+id/tvPriceItems"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/viewPriceDetails"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/font_medium"
                                android:text="@string/cart_total"
                                android:textColor="@color/black_85"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvCartPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/viewPriceDetails"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/font_medium"
                                android:text="@string/rupees_value"
                                android:textColor="@color/black_85"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvPriceItems"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/font_medium"
                                android:text="@string/offer_discount"
                                android:textColor="@color/black_85"
                                android:textSize="14sp"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/tvDiscountValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvPriceItems"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/font_medium"
                                android:text="@string/rupees_value"
                                android:textColor="@color/black_85"
                                android:textSize="14sp"
                                tools:visibility="visible" />

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/cbRiggleCoins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvDiscount"
                                android:layout_marginTop="12dp"
                                android:buttonTint="@color/black_54"
                                android:drawableEnd="@drawable/ic_riggle_coin"
                                android:drawablePadding="6dp"
                                android:fontFamily="@font/font_medium"
                                android:text="@string/apply_riggle_coins"
                                android:textColor="@color/black_85"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvRiggleDiscountValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvDiscountValue"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/font_medium"
                                android:textColor="@color/black_85"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/tvAvailableCoins"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cbRiggleCoins"
                                android:layout_marginTop="8dp"
                                android:digits="0123456789"
                                android:fontFamily="@font/font_medium"
                                android:hint="@string/available_coins_value"
                                android:inputType="number"
                                android:textColor="@color/black_85"
                                android:textColorHint="@color/black_38"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <View
                                android:id="@+id/viewAvailableCoins"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/tvAvailableCoins"
                                android:layout_marginTop="12dp"
                                android:background="@color/black_18" />

                            <TextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/viewAvailableCoins"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/font_bold"
                                android:text="@string/total_amount"
                                android:textColor="@color/black_85"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvTotalAmountValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/viewAvailableCoins"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/font_bold"
                                android:text="@string/rupees_value"
                                android:textColor="@color/black_85"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
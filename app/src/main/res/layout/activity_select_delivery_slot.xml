<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/appBar"
        layout="@layout/layout_appbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/appBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/llAddAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_bold"
                        android:text="@string/address"
                        android:visibility="gone"
                        android:textAllCaps="true"
                        android:textColor="@color/black_54"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_4dp_border"
                        android:fontFamily="@font/font_regular"
                        android:gravity="top"
                        android:visibility="gone"
                        android:hint="@string/enter_complete_address_here"
                        android:inputType="textMultiLine"
                        android:minLines="4"
                        android:padding="12dp"
                        android:textColor="@color/black_85" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        app:hintTextColor="@color/black_54">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPinCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_4dp_border"
                            android:enabled="false"
                            android:hint="@string/pin_code"
                            android:inputType="none"
                            android:padding="12dp"
                            android:textColor="@color/black_85" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/rounded_4dp_border"
                            android:drawableRight="@drawable/down_arrow_icon"
                            android:ellipsize="end"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:hint="City Name"
                            android:paddingEnd="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black_85"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/tvState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0.5"
                            android:hint="State"
                            android:singleLine="true"
                            android:background="@drawable/rounded_4dp_border"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:textColor="@color/black_85"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubArea"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/llAddressAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_semibold"
                        android:text="@string/delivering_to"
                        android:textColor="@color/black_85"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/font_medium"
                        android:maxLines="1"
                        android:textColor="@color/black_85"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvStoreAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/font_medium"
                        android:maxLines="3"
                        android:textColor="@color/black_85"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvStorePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/font_medium"
                        android:maxLines="1"
                        android:textColor="@color/black_85"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvChooseDeliverySLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llAddress"
                android:layout_marginBottom="11dp"
                android:background="#f6f6f6"
                android:fontFamily="@font/font_medium"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/choose_Your_delivery_slot"
                android:textColor="@color/black_54"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDeliverDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvChooseDeliverySLot"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_4dp_border"
                android:ellipsize="end"
                android:fontFamily="@font/font_medium"
                android:gravity="center"
                android:hint="YYYY-MM-DD"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="@color/black_85"
                android:textColorHint="@color/black_54"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDeliverySlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/tvChooseDeliverySLot" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDeliveryTimeSlots"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvDeliverySlots" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_proceed"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="40dp"
                android:alpha="0.2"
                android:background="@color/colorPrimary"
                android:clickable="false"
                android:fontFamily="@font/font_bold"
                android:text="@string/confirm_order"
                android:textColor="@color/white"
                app:cornerRadius="6dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

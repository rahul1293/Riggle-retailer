<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.riggle.baseClass.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="bean"
            type="com.riggle.data.models.response.ProductsData" />

        <variable
            name="pos"
            type="Integer" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvQuant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{bean.quantity==0?View.GONE:View.VISIBLE}">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@color/colorPrimary"
                    android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
                    app:srcCompat="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tvQuantSet"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_bg_black"
                    android:cursorVisible="false"
                    android:digits="0123456789"
                    android:fontFamily="@font/font_medium"
                    android:gravity="center"
                    android:text='@{String.valueOf(bean.quantity)}'
                    android:textColor="@color/black_85"
                    android:textSize="14sp"
                    tools:ignore="TextViewEdits" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@color/colorPrimary"
                    android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
                    app:srcCompat="@drawable/ic_plus" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rounded_corner_6dp"
                android:drawableStart="@drawable/ic_plus"
                android:drawablePadding="8dp"
                android:fontFamily="@font/font_medium"
                android:gravity="right|center_vertical"
                android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="2dp"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="@{bean.quantity==0?View.VISIBLE:View.GONE}" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_4dp_border"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Enter coupon code"
            android:inputType="textPersonName|textNoSuggestions"
            android:lineSpacingExtra="3sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/black_85"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <TextView
            android:id="@+id/tvApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:text="Apply"
            android:textColor="@color/text_shadow"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_promo"
            app:layout_constraintEnd_toEndOf="@+id/et_promo"
            app:layout_constraintTop_toTopOf="@id/et_promo" />

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:text="All coupons"
            android:textColor="@color/text_shadow"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/et_promo" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_one" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
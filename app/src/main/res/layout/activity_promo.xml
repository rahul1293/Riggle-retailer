<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fitsSystemWindows="true">

                <EditText
                    android:id="@+id/et_promo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_4dp_border"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="Enter coupon code"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:lineSpacingExtra="3sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/black_85"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="@font/font_medium"
                    android:gravity="center"
                    android:text="Apply"
                    android:textColor="@color/text_shadow"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_promo"
                    app:layout_constraintEnd_toEndOf="@+id/et_promo"
                    app:layout_constraintTop_toTopOf="@id/et_promo" />

                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:fontFamily="@font/font_medium"
                    android:gravity="center"
                    android:text="All coupons"
                    android:textColor="@color/text_shadow"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/et_promo" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvApplyCoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toBottomOf="@+id/tv_one">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llApplyCoin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rlOrderProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/_10sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivImg"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/tvConvert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/ivImg"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/ivImg"
                                android:background="@drawable/btn_rounded_corner_home_off_4dp"
                                android:fontFamily="@font/font_regular"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:text="CONVERTKARO"
                                android:textColor="@color/black_85"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvFree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end|bottom"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/btn_rounded_corner_home_off_4dp"
                                android:backgroundTint="@color/red"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_regular"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_15sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="Apply"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvMoq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/rlUpdateCount"
                                android:layout_alignBottom="@+id/rlUpdateCount"
                                android:fontFamily="@font/font_medium"
                                android:gravity="center_vertical"
                                android:text="Redeem coin"
                                android:textAllCaps="false"
                                android:textColor="@color/black_85"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:id="@+id/rlUpdateCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivImg"
                                android:layout_marginStart="16dp"
                                android:layout_toEndOf="@+id/tvMoq">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivMinus"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:background="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_minus" />

                                    <TextView
                                        android:id="@+id/tvQuantSet"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/et_bg_black"
                                        android:cursorVisible="false"
                                        android:digits="0123456789"
                                        android:fontFamily="@font/font_medium"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/black_85"
                                        android:textSize="14sp"
                                        tools:ignore="TextViewEdits" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ivPlus"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:background="@color/colorPrimary"
                                        app:srcCompat="@drawable/ic_plus" />
                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvGrandPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvMoq"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_regular"
                                android:maxLines="1"
                                android:text="(Available Coins:5000)"
                                android:textColor="@color/black_54"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvGrandPrice"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_medium"
                                android:maxLines="1"
                                android:text="Get Rs. 0 off on your order"
                                android:textColor="@color/black_85"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvDiscountPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvGrandPrice"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@+id/tvDiscount"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_medium"
                                android:maxLines="1"
                                android:text="Rs. 0"
                                android:visibility="gone"
                                android:textColor="@color/black_85"
                                android:textSize="14sp" />

                        </RelativeLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/cvApplyCoin" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>